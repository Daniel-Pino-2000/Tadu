<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Add this queries section to declare which apps/intents you want to interact with -->
    <queries>
        <!-- Query for calendar apps that can handle calendar events -->
        <intent>
            <action android:name="android.intent.action.INSERT" />
            <data android:mimeType="vnd.android.cursor.dir/event" />
        </intent>

        <!-- Alternative query for calendar content -->
        <intent>
            <action android:name="android.intent.action.INSERT" />
            <data android:scheme="content"
                android:host="com.android.calendar" />
        </intent>

        <!-- Query for calendar apps by category -->
        <intent>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.APP_CALENDAR" />
        </intent>

        <!-- Specific calendar app packages (optional - for targeting specific apps) -->
        <package android:name="com.google.android.calendar" />
        <package android:name="com.samsung.android.calendar" />
        <package android:name="com.android.calendar" />
        <package android:name="com.htc.calendar" />
        <package android:name="com.lge.calendar" />
        <package android:name="com.miui.calendar" />
        <package android:name="com.huawei.calendar" />

        <!-- Provider query for calendar content -->
        <provider android:authorities="com.android.calendar" />
    </queries>


    <!-- For scheduling exact alarms (Android 12+) -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />

    <!-- For notifications (Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- For wake-up alarms -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />

    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

    <application
        android:name=".TaskListApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Tadu"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:label="@string/app_name"
            android:theme="@style/Theme.Tadu">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Receiver for handling alarms -->
        <receiver android:name=".notifications.ReminderReceiver"
            android:enabled="true"
            android:exported="false" />

        <receiver
            android:name=".notifications.BootReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

    </application>

</manifest>